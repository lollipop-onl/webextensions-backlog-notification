{
  "manifest_version": 2,
  "version": "<%= version %>",
  "version_name": "<%= versionName %>",
  "name": "Backlog Notification Extension",
  "description": "<%= description %>",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "https://*.backlog.com/api/v2/*",
    "https://*.backlog.jp/api/v2/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
